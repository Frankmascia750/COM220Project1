<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.com220project1.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/franksfranks2"/>


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Frank's Franks"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:text="Home of the best grilled hotdogs in town"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descrip"
        android:text="Open Mon-Sun 12PM-10PM"
        android:textColor="#DCE775"
        android:padding="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Located convienently on 24 BUN AVENUE"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="80dp"/>


</RelativeLayout>
